<!DOCTYPE html>
<html>
  <head>
    <title>LibraryRoom</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class = "navbar navbar-default">
      
      <div class = "container">
               
        <div class =  "navbar-header">
          <%= link_to "Library Room Booking", root_path, class: "navbar-brand" %>

        </div>

        <ul class = "nav navbar-nav">

           <% if user_signed_in? %>
           <% @user = current_user %>
            <li><%= link_to "My Profile", user_path(@user) %></li>
            <li><%= link_to "My Reservation", reservations_user_path(@user) %></li>
           <% if @user.user_type <=2 %>
            <li><%= link_to "Userlist (and their reservations)", users_path %></li>
           <% end %>
          <% end %>
          
        </ul> 

        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
          <% else %>
            <li><%= link_to "Log In", new_user_session_path %></li>
            <li><%= link_to "Sign Up", new_user_registration_path %></li>
          <% end %>
       </ul>        

        

      </div>      

    </nav>

   
    <% if notice %><div class="notice"><h4><%= notice %></h4></div><% end %>
  	<% if notice %><div class="alert"><h4><%= alert %></h4></div><% end %>
    <% if user_signed_in? %>
        <% @user = current_user %>       
        <% if @user.user_type ==1 %><p>Sign in as <strong><%= current_user.name %></strong> (Preconfigured Admin User)</p>
        <% elsif @user.user_type ==2 %><p>Sign in as <strong><%= current_user.name %></strong> (Admin User)</p>
        <% elsif @user.user_type ==3 %><p>Sign in as <strong><%= current_user.name %></strong> (User)</p>
        <% end %>
    <% end %>

    <%= yield %>


   
