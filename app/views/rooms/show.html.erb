
<h3>Room <%= @room.name %></h3>
<h3>Location: <%= @room.location %></h3>
<h3>Size: <%= @room.size %></h3>
<h3>Status: <%= @room.status %></h3>

<div class="room">
    <%= link_to "Show all Bookings", room_bookings_path(@room) %>
    <% if user_signed_in? %>
        <%= link_to "Add Booking", new_room_booking_path(@room) %>
        <% @user = current_user %>
        <% if @user.user_type <= 2 %> 
          <%= link_to "Edit", edit_room_path(@room) %>
          <%= link_to "Delete", room_path(@room), data: { confirm: 'Are you sure?' }, method: :delete, style: "color: red" %>
          <% end %>
      <% end %>
  </div>

<%= link_to "Back", rooms_path%>