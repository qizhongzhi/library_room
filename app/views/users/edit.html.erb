<h1>Edit User</h1>
<%= simple_form_for @user, :html => {:multipart => true} do |f| %>
	<%= f.input :name, label: "Name", placeholder: 'Jane Doe', required: true  %>
 	<%= f.input :address, label: "Address", placeholder: 'Street Number, APT Number, City, Zip Code, State, Country', required: true %>
 	<%= f.input :telephone, label: "Telephone Number", placeholder: '000-000-0000', required: true %>
 	<% if user_signed_in? %>
 		<% @user_temp = current_user %>
 			<% if (@user_temp.user_type ==2 && @user.user_type != 1) || @user_temp.user_type ==1&& @user.user_type != 1 %>
 				<h5><strong>User Type</strong></h5>
 				<%= f.select( :user_type, options_for_select([['Admin', 2],['User', 3]])) %>
 			<% end %>
 	<% end %>
 	<br>
 	<br>
 	<br>
  	<%= f.button :submit %>
<% end %>
