<p>Name:</p>
<h4><%= @user.name %></h4>
<p>Email Address:</p>
<h4><%= @user.email %></h4>
<p>Address:</p>
<h4><%= @user.address %></h4>
<p>Telephone Number:</p>
<h4><%= @user.telephone %></h4>
<p>User Type:</p>
<% if @user.user_type ==1 %>
    <h4>Preconfigure Admin</h4>
<% elsif @user.user_type ==2 %>
    <h4>Admin</h4>
<% elsif @user.user_type ==3 %>
    <h4>User</h4>
<% end %>



<%= link_to 'Back to User List', users_path %>
<% if user_signed_in? %>
	<% @user_temp = current_user %>
  	<% if @user_temp.id == @user.id || (@user_temp.user_type ==2 && @user.user_type != 1) || @user_temp.user_type ==1 %>	
		<td><%= link_to "Edit", edit_user_path(@user) %></td>
	<% end %>
	<% if (@user_temp.user_type ==2 && @user.user_type != 1) || (@user_temp.user_type ==1 && @user.user_type != 1 ) || (@user_temp.id == @user.id && @user.user_type != 1)%>	
		<td><%= link_to "Delete", user_path(@user), method: :delete, data: {confirm: "Are you sure?"}, style: "color: red" %></td>
	<% end %>
<% end %>

